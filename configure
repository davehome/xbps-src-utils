PREFIX="/usr/local"
ETCDIR="/etc"
TGT="xbps-repo-checkvers"
PROGRAMS="cp rm make sed pkg-config cc"
PKGS="libxbps"

for opt in "$@"; do
	case ${opt} in
		--prefix=*)
			PREFIX=$(echo ${opt} | sed 's/^--prefix=//')
		;;
		--etcdir=*)
			ETCDIR=$(echo ${opt} | sed 's/^--etcdir=//')
		;;
		*)
			_arg=$(echo ${opt} | sed -e "s|=.*$||")
			printf "Unrecognized option: %s\n" ${_arg}
			exit 1;
		;;

	esac
done

check_program() {
	echo -n "Checking for ${1} ... "
	${1} --help &>/dev/null
	if [ 0 -ne ${?} ]; then
		echo "not found!"
		exit 1;
	fi
	echo "found."
}

check_pkg() {
	echo -n "Checking for ${1} ... "
	pkg-config --exists ${1}
	if [ 0 -ne ${?} ]; then
		echo "not found!"
		exit 1;
	fi
	echo "found."
}

gen_makefile() {
	for p in ${PROGRAMS}; do
		check_program ${p}
	done
	for p in ${PKGS}; do
		check_pkg ${p}
	done
	echo -n "Generating Makefile ... "
	sed 					\
		-e "s|%%PREFIX%%|${PREFIX}|g"	\
		-e "s|%%ETCDIR%%|${ETCDIR}|g"	\
		-e "s|%%TGT%%|${TGT}|g"		\
		-e "s|%%PKGS%%|${PKGS}|g"	\
		Makefile.in > Makefile
	echo "done."
}

gen_makefile
